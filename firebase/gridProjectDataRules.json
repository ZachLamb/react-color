{
    "rules" : {
        ".read" : "auth != null && data.child('adminUsers').child(auth.uid).val() == true",
        ".write" : "auth != null && data.child('adminUsers').child(auth.uid).val() == true",
        "$grid" : {
            ".read" : "auth != null && data.child('users').child(auth.uid).child('active').val() == true",
            ".write" : "auth != null && data.child('users').child(auth.uid).child('active').val() == true",
			".validate" : "$grid.matches(/^(grid)[0-9]+$/) && newData.hasChildren()",
            "numCols" : {
              ".validate" : "newData.val() > 0"
            },
            "numRows" : {
              ".validate" : "newData.val() > 0"
            },
            "$row" : {
                ".validate" : "$row.matches(/^(r)[0-9]+$/) && newData.hasChildren()",
                "$col" : {
                    ".validate" : "$col.matches(/^(c)[0-9]+$/) && newData.val().matches(/^#[0-9a-fA-F]{6}$/)"
                }
            }
        }
    }
}
